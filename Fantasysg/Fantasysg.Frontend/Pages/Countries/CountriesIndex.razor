@page "/countries"

<h3>Paises</h3>

@if(Countries is null)
{
    <p>Cargando ...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Pais</td>
                <td></td>
            </tr>
        </thead>

        <tbody>
            @foreach (var country in Countries!)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a class="btn btn-warning">Editar</a>
                        <button class="btn btn-danger">Borrar</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
}



